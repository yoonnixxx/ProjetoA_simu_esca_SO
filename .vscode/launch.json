{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Simulador (g++.exe + gdb)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/simulador.exe",
      "args": ["--config", "config_exemplo.txt", "--mode", "run"],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        { "text": "-enable-pretty-printing", "description": "Enable pretty printing", "ignoreFailures": true }
      ]
    }
  ]
}
